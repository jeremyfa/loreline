
character Alice
  name: "Alice"
  mood: "neutral"

beat Main
  choice
    Direct
      Alice: "I'm $Alice.mood"
    + MoodChange

beat MoodChange
  Alice.mood = "happy"
  choice
    Greet
      Alice: "I'm $Alice.mood!"

