
state {
  hasPass: true
  isVIP: false
}

character guard {
  name: Guard
}

beat Gate {
  guard: Halt! State your business.

  choice {
    Show pass if hasPass {
      guard: You may enter.
    }
    VIP entrance if isVIP {
      guard: Right this way.
    }
    Leave {
      guard: Move along then.
    }
  }
}

