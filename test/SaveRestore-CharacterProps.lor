
character barista
  name: Alex
  friendliness: 3

character customer
  name: Jamie
  isRegular: false

beat Start
  barista: Hey there!

  customer.isRegular = true
  barista.friendliness = 5

  choice
    Chat -> AfterChat

beat AfterChat
  if customer.isRegular
    barista: Welcome back, regular!

  if barista.friendliness > 4
    barista: You are my favorite customer!

