
state
  outerRuns: 0
  optionBodyRuns: 0
  innerRuns: 0

beat Main
  choice
    Direct
      "Direct. outer=$outerRuns, opt=$optionBodyRuns, inner=$innerRuns"
    + OuterBeat

beat OuterBeat
  outerRuns += 1
  choice
    GoInner
      optionBodyRuns += 1
      choice
        InnerDirect
          "InnerDirect. outer=$outerRuns, opt=$optionBodyRuns, inner=$innerRuns"
        + InnerBeat

beat InnerBeat
  innerRuns += 1
  choice
    InnerInserted
      "InnerInserted. outer=$outerRuns, opt=$optionBodyRuns, inner=$innerRuns"

