
beat Main
  new state
    localVal: 0

  localVal += 5
  Local is $localVal.
  Increment()
  Now local is $localVal.
  choice
    Show
      "Final: $localVal"
    Double
      localVal *= 2
      "Final: $localVal"

beat Increment
  localVal += 3

