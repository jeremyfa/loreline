
state {
  score: 0
}

character narrator {
  name: Narrator
}

beat Main {
  narrator: Welcome!

  choice {
    Play {
      score += 10
      narrator: You scored $score points!
    }
    Skip {
      narrator: Maybe next time.
    }
  }

  narrator: Thanks for playing.
}

